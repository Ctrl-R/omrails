<div class="well">
	<table class="table table-striped">
		<% @club.pendinguser.each do |pendinguser| %>
		<tr>
			<td><%= User.find(pendinguser).name %></td>
			<td width="50px"><%= link_to "Approve", approvemember_club_path(@club, :newuser => pendinguser), :class => "btn btn-primary", data: { confirm: 'Are you sure you want to approve this user?' } %></td>
			<td width="50px"><%= link_to "Deny", removemember_club_path(@club, :removeuser => pendinguser), :class => "btn btn-warning", data: { confirm: 'Are you sure you want to deny membership to this user?' } %></td>
			<td width="50px"><%= link_to "Ban", banmember_club_path(@club, :banuser => pendinguser), :class => "btn btn-warning", data: { confirm: 'Are you sure you want to ban this user?' } %></td>
		</tr>
		<% end %>
	</table>
</div>