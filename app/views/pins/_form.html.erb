<%= simple_form_for(@pin, html: { class: "form-horizontal"}) do |f| %>
  <%= f.error_notification %>
  <%= f.full_error :image_file_size, class: "alert alert-error" %>
	<%= f.full_error :image_content_type, class: "alert alert-error" %>

    <%= f.input :image, label: "Upload an image" %>
    <%= f.input :category, collection: ["Helmets", "Kayaks", "Paddles", "PFDs", "Skirts", "Other"] %>
    <%= f.input :description, as: :text, input_html: { rows: "3"} %>
    <%= f.input :forloan, label: "For Loan" %>
    <%= f.input :forsale, label: "For Sale" %>
    <%= f.input :publicgear, label: "Public (leave unchecked to show gear only in clubs)" %>
  <div class="form-actions">
    <%= f.button :submit, class: "btn btn-primary" %>
  </div>
<% end %>