<%= simple_form_for(@club, html: { class: "form-horizontal"}) do |f| %>
  <%= f.error_notification %>
  <%= f.full_error :image_file_size, class: "alert alert-error" %>
	<%= f.full_error :image_content_type, class: "alert alert-error" %>

    <%= f.input :name %>
    <%= f.input :description, :input_html => {:rows => 10} %>
    <%= f.input :location, label: "Location of your club (to help others find you)" %>
    <%= f.input :listed, label: "Check if you wish your club to be public" %>
    <%= f.input :image, label: "Upload an image for your club" %>

  <div class="form-actions">
    <%= f.button :submit, :class => "btn btn-primary" %>
  </div>
<% end %>
