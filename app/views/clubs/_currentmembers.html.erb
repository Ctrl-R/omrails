<div class="well">
	<table class="table table-striped">
		<% @club.userlist.each do |existinguser| %>
		<tr>
			<td><%= link_to User.find(existinguser).name, user_path(existinguser) %></td>
			<% if @club.admin == current_user.id %>
				<td width="50px"><%= link_to "Remove", removemember_club_path(@club, :removeuser => existinguser), :class => "btn btn-primary", data: { confirm: 'Are you sure you want to remove this user?' } %></td>
				<td width="50px"><%= link_to "Ban", banmember_club_path(@club, :banuser => existinguser), :class => "btn btn-warning", data: { confirm: 'Are you sure you want to ban this user?' } %></td>
			<% end %>
		</tr>
		<% end %>
	</table>
</div>