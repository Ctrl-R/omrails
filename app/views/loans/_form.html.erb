<%= simple_form_for(@loan, html: { class: "form-horizontal"}) do |f| %>
  <%= f.error_notification %>

  <%= f.input :loanedto, label: "Loaned To" %>
  <%= f.input :loanedon, label: "Loaned On", :input_html => {:style => 'width: 120px'} %>
  <%= f.input :returnedon, label: "Returned On", :input_html => {:style => 'width: 120px'} %>
  
  <div class="form-actions">
    <%= f.button :submit, class: 'btn btn-primary' %>
  </div>
<% end %>
