<div class="row">
  <div class="span6 offset3">
  	<div class="well">
			<%= image_tag @pin.image %>
			<p>
			  <%= @pin.description %>
			</p>
			<p>
			  <%= @pin.user.name %>
			</p>
			<% if current_user == @pin.user %>
				<%= link_to 'Edit', edit_pin_path(@pin) %> |
			<% end %>
			<%= link_to 'Back', pins_path %>
		</div>
		
		<% if current_user == @pin.user %>
			<div class="well">
				<p>
					<b>Loans:</b>
					<table class="table table-striped">
                  <thead>
                          <tr>
                              <th>Loaned To</th>
                              <th>Loaned On</th>
                              <th></th>
                              <th></th>
                              <th></th>
                          </tr>
                  </thead>
                  <tbody>
                          <%= render @pin.loans %>
                  </tbody>
          </table>
				</p>
				<p>
					<b>Loan Equipment:</b>
					<%= simple_form_for([@pin, @pin.loans.build], html: { class: "form-horizontal"}) do |f| %>
					  <%= f.input :loanedTo, label: "Loaned To" %>
					  <%= f.input :loanedOn, label: "Loaned On" %>
					  
					  <div class="form-actions">
					    <%= f.button :submit, class: "btn btn-primary" %>
					  </div>
					<% end %>
				</p>
			</div>
		<% else %>
			<div class="well">
				<% if @pin.loans.blank? %>
					<h2>This item is available!</h2>
				<% else %>
					<% if @pin.loans.last[:returnedOn].blank? %>
						<h2>This item is currently on Loan.</h2>
					<% else %>
						<h2>This item is available!</h2>
					<% end %>
				<% end %>
			</div>
		<% end %>
	</div>
</div>